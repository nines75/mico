{
    "name": "mico",
    "description": "ニコニコ動画に便利な機能を追加します。",
    "version": "3.1.1",
    "type": "module",
    "scripts": {
        "dev": "wxt -b firefox --mv2",
        "build": "wxt build -b firefox --mv2",
        "zip": "wxt zip -b firefox --mv2",
        "postinstall": "wxt prepare",
        "preversion": "pnpm check",
        "compile": "tsc --noEmit",
        "lint": "eslint src/ --max-warnings=0",
        "format": "prettier . --write",
        "format:ci": "prettier . --check",
        "test": "vitest",
        "test:ci": "vitest run",
        "check": "concurrently 'pnpm compile' 'pnpm lint' 'pnpm format:ci' 'pnpm test:ci'"
    },
    "dependencies": {
        "@codemirror/autocomplete": "^6.18.6",
        "@codemirror/commands": "^6.8.1",
        "@codemirror/state": "^6.5.2",
        "@codemirror/view": "^6.37.1",
        "@icons-pack/react-simple-icons": "^13.0.0",
        "@replit/codemirror-vim": "^6.3.0",
        "deepmerge-ts": "^7.1.5",
        "lucide": "^0.522.0",
        "lucide-react": "^0.513.0",
        "p-queue": "^8.1.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "superjson": "^2.2.2",
        "type-fest": "^4.41.0",
        "zustand": "^5.0.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@types/firefox-webext-browser": "^120.0.4",
        "@types/react": "^19.1.6",
        "@types/react-dom": "^19.1.6",
        "@wxt-dev/auto-icons": "^1.0.2",
        "@wxt-dev/module-react": "^1.1.3",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.0",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "prettier": "^3.5.3",
        "rollup-plugin-license": "^3.6.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.33.1",
        "vitest": "^3.2.2",
        "wxt": "^0.20.7"
    }
}
